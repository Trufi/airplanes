{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "moduleResolution": "node",
    "lib": ["dom", "es6"],
    "sourceMap": true,
    "strict": true,
    "noEmitHelpers": true,
    "importHelpers": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "skipLibCheck": true,
    "skipDefaultLibCheck": true
  },
  "exclude": ["/node_modules/(?!@2gis/gl-matrix|2gl)/"],
  "ignore": "/node_modules/(?!@2gis/gl-matrix|2gl)/"
}
